<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -DayUp</title>
    @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
        <script src="~/Scripts/ErlichLiu.js"></script>
    <script src="http://localhost/DayUp/Scripts/jquery-1.10.2.js"></script>
    <script src="http://localhost/DayUp/Scripts/jquery-1.10.2.min.js"></script>
    <style>
        .searchbar{
            width:auto;
            height:25px;
            position:center;
            margin:12px 0px 12px 20px;
        }
    </style>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("日更", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("主页", "Index", "Home")</li>
                    
                    @*<li>@Html.ActionLink("获取所有历史内容", "About", "Home")</li>*@
                    <li>@Html.ActionLink("我的收藏夹", "CollectionList", "Home")</li>
                    <li><input name="searchbar" style="text" id="searchbar" class="searchbar" /></li>\
                    <li><button id="getSearch" class="searchbar" onclick="GoSearch($('#searchbar').val())">搜索</button></li>
                    <li><button id="getAllData" class="searchbar" onclick="GetAllSubContent()">获取所有历史内容</button></li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        @*<hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - 我的 ASP.NET 应用程序</p>
    </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
